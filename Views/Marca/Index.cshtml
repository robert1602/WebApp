@using WebApp.Models
@model List<MarcaCLS>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Agregar", "Agregar", "Marca", null, new { @class = "btn btn-primary" })

<table class="table table-bordered table-hover">
    <thead>

        <tr>
            <td width="10%">@Html.LabelFor(p => Model[0].iidMarca)</td>
            <td width="20%">@Html.LabelFor(p => Model[0].nombre)</td>
            <td width="70%">@Html.LabelFor(p => Model[0].descripcion)</td>
            <td width="10%">operaciones</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.iidMarca</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>
                    @Html.ActionLink(" ", "Editar", "Marca", new { id =@item.iidMarca }, new { @class = "glyphicon glyphicon-edit btn btn-primary" })
                    @Html.ActionLink(" ", "Eliminar", "Marca", new { id =@item.iidMarca }, new { @class = "glyphicon glyphicon-trash btn btn-danger" })
                </td>
            </tr>

        }


    </tbody>
</table>